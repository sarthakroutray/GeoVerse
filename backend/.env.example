# LLM Configuration (REQUIRED)
OPENROUTER_API_KEY=your-openrouter-api-key-here
LLM_PROVIDER=openrouter
LLM_MODEL=deepseek/deepseek-chat-v3-0324:free
MAX_TOKENS=1500

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/geoverse
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/geoverse_test

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Gemini Configuration (Optional)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=1500
GEMINI_TEMPERATURE=0.7

# LangChain Configuration
LANGCHAIN_TRACING=false
LANGCHAIN_API_KEY=your_langchain_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/backend.log

# Vector Store Configuration
VECTOR_STORE_TYPE=faiss  # or chromadb
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
VECTOR_DIMENSION=1024

# Web Scraping Configuration
SCRAPING_DELAY=1.0
SCRAPING_USER_AGENT=GeoVerse-Bot/1.0
SCRAPING_TIMEOUT=30

# File Storage
UPLOAD_DIRECTORY=data/uploads
MAX_FILE_SIZE=50MB

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Environment
ENVIRONMENT=development  # development, staging, production
