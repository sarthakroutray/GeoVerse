# GeoVerse Backend Environment Example

ENVIRONMENT=production
LOG_LEVEL=INFO
ALLOWED_ORIGINS=https://your-vercel-app.vercel.app
FRONTEND_URL=https://your-vercel-app.vercel.app

# LLM API Keys (set as needed)
GEMINI_API_KEY=your_gemini_key
OPENROUTER_API_KEY=your_openrouter_key

# Database
DATABASE_URL=postgresql://user:password@host:5432/geoverse
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password
REDIS_URL=redis://localhost:6379/0

# Supabase/PostgreSQL
SUPABASE_DB_URL=postgresql://user:password@db.supabase.co:5432/dbname
SUPABASE_DB_SCHEMA=public

# Security
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Embeddings & Vector Store
VECTOR_STORE_TYPE=faiss
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
VECTOR_DIMENSION=1024
FALLBACK_CONTEXT_CHARS=2000
MAX_TOKENS=4000

# File Storage
UPLOAD_DIRECTORY=data/uploads
DATA_DIRECTORY=data
RAW_DATA_DIRECTORY=data/raw
PROCESSED_DATA_DIRECTORY=data/processed
EMBEDDINGS_DIRECTORY=data/embeddings

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Other (see backend/src/utils/config.py for all options)
